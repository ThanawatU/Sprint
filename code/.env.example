# =============================================================================
# Environment Configuration for Docker Compose
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_USER=pnn_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=pnn_db

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=production

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your_super_secret_jwt_key_here

# -----------------------------------------------------------------------------
# Cloudinary (Image Storage)
# -----------------------------------------------------------------------------
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# -----------------------------------------------------------------------------
# Google Maps API
# -----------------------------------------------------------------------------
GOOGLE_MAPS_API_KEY=your_backend_google_maps_api_key
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_frontend_google_maps_api_key

# -----------------------------------------------------------------------------
# Admin Account (Auto-created on first run)
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@painamnae.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# -----------------------------------------------------------------------------
# API Base URL (for frontend to reach backend)
# -----------------------------------------------------------------------------
# For local development with Docker:
NUXT_PUBLIC_API_BASE=http://localhost:3000/api/
# For production (use your actual domain):
# NUXT_PUBLIC_API_BASE=https://api.yourdomain.com/api/
